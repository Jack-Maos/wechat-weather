/* pages/my/my.wxss */
page {
  height: 100%;
}

.the-my {
  width: 100%;
  overflow: hidden;
}

.the-my .pic {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid #f0f0f0;
  position: absolute;
  top: 150rpx;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .4);
}

.the-my .pic .img {
  width: 100%;
  height: 100%;
  display: block;
}

.the-my .txt {
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 120rpx;
  left: 0;
  color: #333;
  font-size: 30rpx;
  line-height: 1.6;
}