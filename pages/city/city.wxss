/* pages/city/city.wxss */
.the-content {
  width: 100%;
  overflow: hidden;
}

.the-search {
  width: 100%;
  height: 100rpx;
  position: relative;
}

.ser-com {
  width: 100%;
  height: 100rpx;
  padding: 0 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-bottom: 1px solid #f0f0f0;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
}

.ser-inp {
  width: calc(100% - 120rpx);
}

.ser-inp .inp {
  width: 100%;
  height: 60rpx;
  padding: 0 15rpx;
  background-color: #f8f8f8;
  box-sizing: border-box;
  border: 1px solid #f0f0f0;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-top: 18rpx;
}

.cancle-btn {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.the-urban {
  width: 100%;
  overflow: hidden;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}

.ur-thead {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  font-size: 30rpx;
}

.urban-list {
  width: 100%;
  overflow: hidden;
}

.urban-list .item {
  width: 33.33%;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  text-align: center;
  padding: 0 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  float: left;
}

.urban-list .ti {
  color: #666;
  font-size: 24rpx;
  background-color: #efefef;
  border-radius: 8rpx;
  display: block;
}

.the-city {
  width: 100%;
  overflow: hidden;
  padding-bottom: 40rpx;
}

.city-list {
  width: 100%;
  overflow: hidden;
}

.city-list .item {
  padding: 20rpx 40rpx;
  color: #666;
  font-size: 26rpx;
  border-bottom: 1px solid #f0f0f0;
}

.none-ti {
  width: 100%;
  padding: 100rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}